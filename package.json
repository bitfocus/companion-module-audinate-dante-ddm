{
	"name": "companion-module-audinate-dante-ddm",
	"version": "1.0.0",
	"main": "dist/main.js",
	"scripts": {
		"clean": "rimraf dist",
		"format": "prettier -w .",
		"transpile": "tsc",
		"install": "npm run --silent transpile",
		"graphql-codegen": "npx graphql-code-generator --verbose",
		"prepare": "husky install",
		"dev": "yarn build:watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint ./src --ext .ts",
		"postinstall": "yarn build"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-audinate-dante-ddm.git"
	},
	"dependencies": {
		"@apollo/client": "^3.10.4",
		"@babel/core": "^7.24.5",
		"@companion-module/base": "~1.8.0",
		"@graphql-codegen/client-preset": "^1.3.0",
		"@types/node": "^18.19.33",
		"@typescript-eslint/parser": "^5.62.0",
		"cross-fetch": "^3.1.8",
		"eslint": "^8.57.0",
		"graphql": "^16.8.1",
		"graphql-tag": "^2.12.6"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.5.0",
		"@graphql-codegen/cli": "^2.16.5",
		"@graphql-codegen/typescript": "^2.8.8",
		"@graphql-codegen/typescript-operations": "^2.5.13",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"rimraf": "^3.0.2",
		"typescript": "^4.9.5",
		"husky": "^7.0.4"
	},
	"prettier": "@companion-module/tools/.prettierrc.json"
}

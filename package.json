{
	"name": "companion-module-audinate-dante-ddm",
	"version": "1.1.3",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"clean": "rimraf dist",
		"format": "prettier -w .",
		"transpile": "tsc",
		"graphql-codegen": "npx graphql-code-generator --verbose",
		"prepare": "husky",
		"dev": "yarn run build:watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"build:module": "yarn run build && yarn install --production && ./build-module.sh",
		"lint": "eslint",
		"test": "vitest"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-audinate-dante-ddm.git"
	},
	"dependencies": {
		"@apollo/client": "^3.10.4",
		"@babel/core": "^7.24.5",
		"@companion-module/base": "^1.12.1",
		"@graphql-codegen/client-preset": "^4.2.6",
		"@types/node": "^22.13.4",
		"cross-fetch": "^4.0.0",
		"graphql": "^16.8.1",
		"graphql-tag": "^2.12.6"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.1.1",
		"@graphql-codegen/cli": "^5.0.5",
		"@graphql-codegen/typescript": "^4.0.7",
		"@graphql-codegen/typescript-operations": "^4.2.1",
		"@types/jest": "^29.5.14",
		"@types/pem": "^1.14.4",
		"@typescript-eslint/eslint-plugin": "^8.24.1",
		"@typescript-eslint/parser": "^8.24.1",
		"eslint": "^9.20.1",
		"husky": "^9.0.11",
		"msw": "^2.10.4",
		"pem": "^1.14.8",
		"prettier": "^3.5.1",
		"rimraf": "^6.0.1",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.18.1",
		"vitest": "^3.2.4"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	}
}
